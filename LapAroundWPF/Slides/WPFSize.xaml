<l:Slide x:Class="LapAroundWPFTechEd2007.Slides.WPFSize"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:l="clr-namespace:LapAroundWPFTechEd2007.Slides"
    Title="How Big is WPF?">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		
		<TextBlock Text="ASP.NET 2.0" Style="{StaticResource slideText}" />
		<TextBlock Text="Windows Forms 2.0" Grid.Column="1" Style="{StaticResource slideText}" />
		<TextBlock Text="WPF 1.0" Grid.Column="2" Style="{StaticResource slideText}" />
	</Grid>
</l:Slide>
