<l:Slide x:Class="LapAroundWPFTechEd2007.Slides.Xaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:l="clr-namespace:LapAroundWPFTechEd2007.Slides"
    Title="Xaml Syntax">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="25" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Viewbox>
		<ContentControl x:Name="container" />
		</Viewbox>
		<GridSplitter ResizeDirection="Rows"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom" Height="3" Background="#AA212121"/>

		<TextBox x:Name="editor" HorizontalAlignment="Center" BorderThickness="0" Margin="5" Grid.Row="1" Foreground="White" Background="Transparent" AcceptsReturn="True" AcceptsTab="True" FontFamily="Consolas" FontSize="25" />
	</Grid>
</l:Slide>
