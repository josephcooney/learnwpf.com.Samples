<s:Slide x:Class="LapAroundWPFTechEd2007.Slides.Layout.WrapPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="clr-namespace:LapAroundWPFTechEd2007.Slides"
    Title="WrapPanel"
    >

      <WrapPanel Grid.Row="1" >
		<Button Content="Click Me" Margin="5" x:Name="clearInk" />
		<TextBlock VerticalAlignment="Center" Text="The Quick Brown Fox jumps over the Lazy Dog" Foreground="White" FontFamily="Palatino Linotype" Typography.ContextualAlternates="True" Typography.DiscretionaryLigatures="True" FontSize="16" TextWrapping="Wrap" />
		<Image Source="/Resources/Images/ballmer_tongue.jpg" Width="60" Margin="3" />
		<Rectangle Width="100" Height="50" Stroke="Navy">
			<Rectangle.Fill>
				<RadialGradientBrush>
					<GradientStop Color="AliceBlue" />
					<GradientStop Color="DodgerBlue" Offset="1" />
				</RadialGradientBrush>
			</Rectangle.Fill>
		</Rectangle>		
		
		<MediaElement Width="250" Source="E:\Tech.Ed2007\Assets\developers.mpg" />
		
		<TextBlock x:Name="inkRecognized" FontSize="16" />
      </WrapPanel>

</s:Slide>
