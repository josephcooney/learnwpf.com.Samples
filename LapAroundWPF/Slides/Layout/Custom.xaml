        <Rectangle Fill="Yellow"/>
        <Rectangle Fill="Green"/>
        <Rectangle Fill="Blue"/>
        <Rectangle Fill="Violet"/>

      </atp:AniTilePanel>
    </ScrollViewer>
  </DockPanel>
</s:Slide>
