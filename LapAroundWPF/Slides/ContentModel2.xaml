<l:Slide x:Class="LapAroundWPFTechEd2007.Slides.ContentModel2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Content Model"
    SubTitle=" - slightly less evil"
    xmlns:local="clr-namespace:LapAroundWPFTechEd2007.Controls"
    xmlns:l="clr-namespace:LapAroundWPFTechEd2007.Slides"
    >
    <Grid>
		<StackPanel VerticalAlignment="Center">
		<local:SpeakLabel Content="Do you want to quit?" FontFamily="Palatino Linotype" Foreground="White" FontSize="35" HorizontalAlignment="Center">
		</local:SpeakLabel>
      <local:SpeakButton Margin="5" Width="500" HorizontalAlignment="Center">
				<TextBlock Text="Yes, I want to quit." Style="{StaticResource slideText}"/>
			</local:SpeakButton>
      <local:SpeakButton Margin="5" Width="500" HorizontalAlignment="Center">
        <TextBlock Text="No, I want to keep going." Style="{StaticResource slideText}"/>
      </local:SpeakButton>
      </StackPanel>
    </Grid>
</l:Slide>
