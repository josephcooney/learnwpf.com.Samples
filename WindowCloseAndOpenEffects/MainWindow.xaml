<l:EffectWindow x:Class="WindowCloseAndOpenEffects.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:WindowCloseAndOpenEffects"
             mc:Ignorable="d" Title="Opening and closing effects"
             Style="{StaticResource foo}" Width="640" Height="480" x:Name="mainWindow">
    <l:EffectWindow.CloseStoryboard>
        <Storyboard>
            <DoubleAnimation  Storyboard.TargetProperty="Opacity" Storyboard.TargetName="mainWindow"  From="1"  To="0"  Duration="0:0:0.30" />
        </Storyboard>
    </l:EffectWindow.CloseStoryboard>
    <Grid>
            
    </Grid>
</l:EffectWindow>
