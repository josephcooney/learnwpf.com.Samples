<Window x:Class="ErrorTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox Text="{Binding FirstName, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{StaticResource error-template}" Margin="15,15,200,15" />
        <ComboBox Text="{Binding LastName, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{StaticResource error-template}" Margin="15,15,200,15" />


    </StackPanel>
</Window>
